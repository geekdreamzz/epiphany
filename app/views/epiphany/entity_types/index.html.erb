<div class="row">
  <div class="col-md-12">
    <div class="overview-wrap">
      <% if flash[:notice] %>
        <div class="alert alert-primary" role="alert">
          <%= flash[:notice] %>
        </div>
      <% else %>
        <h2 class="title-1">Entity Types</h2>
      <% end %>
      <button class="au-btn au-btn-icon au-btn--blue" type="button" data-toggle="modal" data-target="#addEntityType">
        <i class="zmdi zmdi-plus"></i>
        New Entity Type
      </button>
    </div>
    <hr/>
    <p>Create "Entity Types" here. Once created you can then nest "Entity Items" under the corresponding Entity Type.</p>
  </div>
</div>
</br>
<div class="row">
  <% @entity_types.each do |et| %>
    <div class="col-lg-6">
    <div class="au-card au-card--no-shadow au-card--no-pad m-b-40">
      <div class="au-card-title">
        <div class="bg-overlay bg-overlay--blue"></div>
        <h3>
          <i class="zmdi zmdi-collection-bookmark"></i><%= et.name %></h3>
        <button class="au-btn-plus" data-toggle="modal" data-target="#addEntityTypeItems<%= et.id %>">
          <i class="zmdi zmdi-plus"></i>
        </button>
      </div>
      <div class="au-task js-list-load">
        <div class="au-message__noti">
          <p><span><%= et.entity_items.count %> Phrases</span></p>
        </div>
        <div class="au-task-list js-scrollbar3">
          <% et.entity_items.each do |item| %>
            <div class="au-task__item au-task__item--success">
              <div class="au-task__item-inner">
                <h5 class="task">
                  <a href="#"><%= item.name %></a>
                </h5>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <% end %>
</div>